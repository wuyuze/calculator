<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a6ac"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/re_show"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:lines="1"
            android:textSize="90px"
            android:gravity="center_vertical|right"
            android:textColor="#ffffff"
            android:background="#111111"
            />



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a6ac"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/rs_show"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="50px"
            android:lines="3"
            android:gravity="center_vertical|right"
            android:textColor="#ffffff"
            android:background="#000000"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/MC"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MC" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/MR"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MR" />
        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/MS"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MS" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/Madd"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="M+" />
        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/Mdelete"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="M-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/log"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="log" />

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/ln"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="ln" />
        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/daoshu"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1/x" />

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/jiecheng"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="!" />
        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/xiangfanshu"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="±" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/clear"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="C" />

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/back"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="←" />
        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/yu"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="%" />

        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/square"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="√" />
        <Button
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/pingf"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="^" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/sin"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="sin" />

        <Button
            android:id="@+id/cos"
            android:layout_marginLeft="1dp"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="cos" />
        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/tan"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="tan" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/e"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="e" />
        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/pi"
            android:background="@drawable/selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="π" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/seven"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/eight"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/nine"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="9" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/divide"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="÷" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/left"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="(" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/four"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_marginLeft="1dp"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/six"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/multiply"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x" />

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/right"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=")" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/one"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/tow"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/three"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="3" />

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/minus"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/zero"
                    android:background="@drawable/selector"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:text="0" />

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/decimal"
                    android:background="@drawable/selector"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="." />

                <Button
                    android:layout_marginLeft="1dp"
                    android:id="@+id/plus"
                    android:background="@drawable/selector"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/calc"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
